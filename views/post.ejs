<%- include('partials/header') -%>
<head>
  <link rel="stylesheet" href="/css/post.css">
  <script src="https://kit.fontawesome.com/b341104090.js" crossorigin="anonymous"></script>
</head>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <div class="post-image">
        <img class="img-fluid" src="<%= post.image%>" />
      </div>
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-danger fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3"><%= post.likes %></h3>
        <%if(post.user == user.id){ %>
          <form
            action="/post/deletePost/<%= post.id %>?_method=DELETE"
            method="POST"
            class="col-3"
          >
            <button class="btn btn-danger fa fa-trash" type="submit"></button>
          </form>
          <%}%>


        <form action="/post/comment/<%= post.id %>" method="POST">
          <div class="comment-section">
            <div class="comment-card">
              <div class="comment-content">
              <label for="comment" class="form-label"></label>
              <input type="text" class="form-control" id="comment" name="comment">
              <button type="submit" class="btn btn-danger" value="Upload">Submit</button>
            </div>
           </div>
         </div>
        </form>
          <%for(var i=0; i<comments.length; i++) {%>
          <div class="comment-card">
            <h3><%= comments[i].comment %></h3>
            <form
            action="/post/deleteComment/<%= comments[i]._id%>?_method=DELETE"
            method="POST"
            class="col-3"
         >
           <button class="btn btn-danger fa fa-trash" type="submit"></button>
         </form>
         </div>
           <% } %>

        <!-- <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-danger fa fa-trash" type="submit"></button>
        </form> -->
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <div class="profile-section">
      <div class="profile-info">
      <div class="profile-item">
          <span>Caption:</span>
          <p><%= post.caption %></p>
            <span>Drink Name:</span>
            <p><%= post.drinkName %></p>
            <span>Rating:</span>
            <p><%= post.rating %></p>
            <span>Location:</span>
            <p><%= post.location %></p>
          </div>
        </div>
      </div>
      </div>
    

    <div class="col-6 mt-5">
      <a class="btn btn-danger" href="/profile">Return to Profile</a>
      <a class="btn btn-danger" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
