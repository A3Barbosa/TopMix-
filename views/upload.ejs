<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="/css/upload.css">
    <script src="https://kit.fontawesome.com/b341104090.js" crossorigin="anonymous"></script>
</head>
<div class="container mt-5">
  <h2>Add a post</h2>
  <form action="/post/createPost" enctype="multipart/form-data"  method="POST">
    <div class="mb-3">
        <label for="drink" class="form-label">Drink Name</label>
        <input type="text" class="form-control" id="drink" name="drinkName">
    </div>
    <div class="mb-3">
      <label for="caption" class="form-label">Caption</label>
      <textarea class="form-control" id="caption" name="caption"></textarea>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <textarea class="form-control" id="location" name="location"></textarea>
    </div>
    <div class="mb-3">
      <label for="caption" class="form-label">Rating 1-5</label>
      <textarea class="form-control" id="rating" name="rating"></textarea>
    </div>
    <div class="mb-3">
      <label for="imgUpload" class="form-label">Image</label>
      <input type="file" class="form-control" id="imageUpload" name="file">
    </div>
    <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
    <a href="/feed" class="btn btn-primary">Cancel</a>
  </form>
</div>

